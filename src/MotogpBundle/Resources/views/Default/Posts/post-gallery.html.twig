<section id="slider-inicio" class="clearfix">
    <div id="swiper-inicio" class="swiper-container" style="width:100%; height : 40vh">
        <div class="swiper-wrapper">
            {% for m in post.getfMedias() %}
                <div
                        class="swiper-slide dark lazy cover"
                        data-src="{% path m, 'xlarge' %}"
                        aria-role="img"
                        title="{{ m.name }}"
                        arial-label="{{ m.name }}"
                >

                    <div class="slider-caption">
                        {% if m.title %}
                            <h2>
                                <a href="{{ m.url ? m.url : '#' }}" target="_blank">
                                    {{ m.title }}
                                </a>
                            </h2>
                            <label>
                                <a href="{{ m.url ? m.url : '#' }}" target="_blank">
                                    {{ m.description }}
                                </a>
                            </label>
                        {% endif %}
                        <div class="slider-modality">
                            <img src="{{ asset('/bundles/motogp/img/assets/logowhite-' ~ modality.slug ~ '.png') }}" alt="">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div id="sw" class="swiper-pagination"></div>
    </div>
</section>