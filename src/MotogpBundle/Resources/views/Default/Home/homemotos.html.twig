{% set mdata = {'moto-2' : 'KTM MOTO2', 'moto-3' : 'KTM RC250GP', 'fim-jr' : ''} %}
<div class="homemotos">
    <div class="homemoto-img relative">
        {% if modality.slug != 'fim-jr' %}
            <label class="golden-text only-desktop lleft">
                {{ mdata[modality.slug] }}
            </label>
            <label class="golden-text only-desktop rright">
                {{ mdata[modality.slug] }}
            </label>
            <img style="width:100%" class="img img-responsive" src="{{ asset('/bundles/motogp/img/assets/motos_home_' ~ modality.slug ~ 'b.png') }}?v={{ "now" | date('dmyhj') }}" />

        {% endif %}
    </div>
    <div class="homemoto-link">
        <img class="link tcenter" href="{{ url('motos', {'modality' : modality.slug }) }}" src="{{ asset('/bundles/motogp/img/assets/plus.png') }}" alt="">
    </div>
    <div class="homemoto-link">
        <img class="link tcenter" href="{{ url('motos', {'modality' : modality.slug }) }}" src="{{ asset('/bundles/motogp/img/assets/plus.png') }}" alt="">
    </div>
</div>

<style>
    .lleft {
        position: absolute;
        top: 7em;
        left: 25em;
        font-weight: lighter;
    }

    .rright {
        position: absolute;
        top: 7em;
        right: 25em;
        font-weight: lighter;
    }
</style>