<div class="home-riders">
    <div class="col-xs-3 tcenter">
        <img class="img img-responsive powered-by" src="{{ asset('/bundles/motogp/img/assets/logo_sponsor-' ~ modality.slug ~ '.png') }}?v={{ "now" | date('ymdhi') }}" />
    </div>

    {% if homeRiders | length >= 2 %}
        <div class="home-rider home-rider-1 relative">
            {#<img src="{% path homeRiders[0].homeImage, 'big' %}" />#}
            <div class="home-rider-image" style="background:url('{% path homeRiders[0].homeImage, 'big' %}')"></div>
            <div class="vertical-separator">
                <span class="circle"></span>
                <span class="circle circle-bottom"></span>
            </div>
            <div class="horizontal-separator-left">
                <span class="circle"></span>
            </div>
        </div>

        <div class="home-rider home-rider-2 relative">
            <div class="home-rider-image" style="background:url('{% path homeRiders[1].homeImage, 'big' %}')"></div>
            <div class="vertical-separator-right">
                <span class="circle"></span>
            </div>
            <div class="horizontal-separator-right">
                <span class="circle"></span>
            </div>
        </div>
        <div class="home-rider-info-wrapper">
            <div class="home-rider-info home-rider-info-left">
                <img class="home-rider-image-mobile" src="{% path homeRiders[0].homeImage, 'big' %}" alt="">
                <h4 class="name">{{ homeRiders[0].name }}</h4>
                <h4 class="surname">{{ homeRiders[0].surname }}</h4>
                <div class="social-rider">
                    <img blank class="link" href="{{ homeRiders[0].facebook }}" src="{{ asset('/bundles/motogp/img/assets/social_facebook.png') }}" alt="">
                    <img blank class="link" href="{{ homeRiders[0].twitter }}" src="{{ asset('/bundles/motogp/img/assets/social_twitter.png') }}" alt="">
                    <img blank class="link" href="{{ homeRiders[0].instagram }}" src="{{ asset('/bundles/motogp/img/assets/social_instagram.png') }}" alt="">
                </div>
            </div>
            <div class="home-rider-info home-rider-info-right">
                <img class="home-rider-image-mobile" src="{% path homeRiders[1].homeImage, 'big' %}" alt="">
                <h4 class="name">{{ homeRiders[1].name }}</h4>
                <h4 class="surname">{{ homeRiders[1].surname }}</h4>
                <div class="social-rider">
                    <img blank class="link" href="{{ homeRiders[1].facebook }}" src="{{ asset('/bundles/motogp/img/assets/social_facebook.png') }}" alt="">
                    <img blank class="link" href="{{ homeRiders[1].twitter }}" src="{{ asset('/bundles/motogp/img/assets/social_twitter.png') }}" alt="">
                    <img blank class="link" href="{{ homeRiders[1].instagram }}" src="{{ asset('/bundles/motogp/img/assets/social_instagram.png') }}" alt="">
                </div>
            </div>
            <div class="shadow"></div>
        </div>

        <div class="home-rider-link">
            <img href="{{ url('riders', {'slug' : homeRiders[0].slug, 'modality' : modality.slug }) }}" class="link tcenter" src="{{ asset('/bundles/motogp/img/assets/plus.png') }}" alt="">
        </div>
        <div class="home-rider-link">
            <img href="{{ url('riders', {'slug' : homeRiders[1].slug, 'modality' : modality.slug }) }}" class="link tcenter" src="{{ asset('/bundles/motogp/img/assets/plus.png') }}" alt="">
        </div>
    {% endif %}

</div>