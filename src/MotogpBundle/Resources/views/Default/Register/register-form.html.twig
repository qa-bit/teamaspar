{% trans_default_domain 'register' %}
{% block title %}{{ "owner" | trans([], 'messages') }} - {{ "register" | trans([], 'messages') }} {% endblock %}
{% extends "MotogpBundle:Default:base.html.twig" %}
{% block body %}
    {{ parent() }}
    {% include "MotogpBundle:Default:Blocks/top-slider.html.twig" with {'gallery' : gallery} %}
    <div class="smoke-background">
        <div class="white-background motos-wrapper">
            <div class="w100">
                <div class="col-xs-12 col-md-9 tcenter section">
                    <div class="">
                        {{ form_start(form) }}
                        <div class="col-xs-12 col-md-6">
                            <p>{{ "subscribe_1" | trans }}</p>
                            <p>{{ "subscribe_2" | trans }}</p>
                        </div>
                        <div class="col-xs-12 col-md-6 tcenter">
                            <fieldset class="form-group">
                                <label class="w100">{{ 'type' | trans | capitalize}}</label>
                                {{ form_widget(form.type, {'attr' : {'class' : 'form-control type-select'}}) }}
                                {{ form_errors(form.type) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'MediaType' | trans | capitalize}}</label>
                                {{ form_widget(form.mediaType, {'attr' : {'class' : 'form-control'}}) }}
                                {{ form_errors(form.mediaType) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'name' | trans | capitalize}}</label>
                                {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'surname' | trans | capitalize}}</label>
                                {{ form_widget(form.surname, {'attr' : {'class' : 'form-control surname'}}) }}
                                {{ form_errors(form.surname) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'email' | trans | capitalize}}</label>
                                {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'phone' | trans | capitalize}}</label>
                                {{ form_widget(form.phone, {'attr' : {'class' : 'form-control'}}) }}
                                {{ form_errors(form.phone) }}
                            </fieldset>
                            <fieldset class="form-group">
                                <label class="w100">{{ 'accept' | trans | capitalize}}</label>
                                {{ form_widget(form.accept, {'attr' : {'class' : 'form-control'}}) }}
                                {{ form_errors(form.accept) }}
                            </fieldset>

                            <fieldset class="form-group">
                                <br><br>
                                <button class="btn btn-info" type="submit">{{ 'send' | trans | capitalize }}</button>
                            </fieldset>
                        </div>
                        <div class="hidden">
                            {{ form_widget(form.locale, {'attr' : {'class' : 'form-control', 'value' : locale}}) }}
                            {{ form_rest(form) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {% include 'MotogpBundle:Default:footer.html.twig' %}
{% endblock %}