{% trans_default_domain 'contact' %}
{% block title %}{{ "owner" | trans([], 'messages') }} - {{ "contact" | trans([], 'messages') }} {% endblock %}
{% extends "MotogpBundle:Default:base.html.twig" %}
{% block body %}
    {{ parent() }}
    {% include "MotogpBundle:Default:Blocks/top-slider.html.twig" with {'gallery' : gallery} %}
    <div class="smoke-background">
        <div class="white-background motos-wrapper">
            <div class="w100">
                <div class="col-xs-12 col-md-9 tcenter section">
                    <div class="">
                        {{ form_start(form) }}
                        <div class="col-xs-12 col-md-6">
                            <fieldset>
                                <label class="col-xs-12">{{ 'name' | trans | capitalize}}</label>
                                <div class="col-xs-12">
                                    {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.name) }}
                            </fieldset>
                            <fieldset>
                                <label class="col-xs-12">{{ 'email' | trans | capitalize}}</label>
                                <div class="col-xs-12">
                                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.email) }}
                            </fieldset>
                            <fieldset>
                                <label class="col-xs-12">{{ 'subject' | trans | capitalize}}</label>
                                <div class="col-xs-12">
                                    {{ form_widget(form.subject, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.subject) }}
                            </fieldset>
                            <fieldset>
                                <label class="col-xs-12">{{ 'phone' | trans | capitalize}}</label>
                                <div class="col-xs-12">
                                    {{ form_widget(form.phone, {'attr' : {'class' : 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.phone) }}
                            </fieldset>
                        </div>

                        <div class="col-xs-12 col-md-6">
                            <fieldset>
                                <fieldset>
                                    <label class="col-xs-12">{{ 'message' | trans | capitalize}}</label>
                                    <div class="col-xs-12">
                                        {{ form_widget(form.comments, {'attr' : {'class' : 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(form.comments) }}
                                </fieldset>
                            </fieldset>
                        </div>

                        <div class="col-xs-12">
                            <br><br>
                            <button class="tcenter btn btn-info" type="submit">{{ 'send' | trans | capitalize }}</button>
                        </div>

                        <div class="hidden">
                            {{ form_rest(form) }}
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    {% include 'MotogpBundle:Default:footer.html.twig' %}
{% endblock %}